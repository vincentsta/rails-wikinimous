<div class="row">
  <div class="col-xs-6 col-md-3 col-md-offset-3">
    <h2>Articles</h2>
  </div>
  <div class="col-xs-6 col-md-3 text-right">
    <h2><%= link_to "Create a new article", new_article_path, class: "btn btn-primary" %></h2>
  </div>
  <div class="col-xs-12 col-md-6 col-md-offset-3">
    <div class="list-group">
      <% @articles.each do |article| %>
        <div class="list-group-item">
            <h4 class="list-group-item-heading"><%= article.title %></h4>
            <p class="list-group-item-text"><%= article.content.slice(0..100) %>...</p>
            <div class="list-group-item-text">
              <%= link_to "View", article_path(article), class: "btn btn-primary btn-xs" %>
              <%= link_to "Edit", edit_article_path(article), class: "btn btn-warning btn-xs" %>
              <%= link_to "Delete", article_path(article),
                    class: "btn btn-danger btn-xs",
                    method: :delete,
                    data: { confirm: "Are you sure?" } %>
            </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
